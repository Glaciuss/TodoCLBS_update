<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav.xml"
    app:startDestination="@id/listFrangment">

    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.testclbs.addFragment"
        android:label="fragment_add"
        tools:layout="@layout/fragment_add" >
        <action
            android:id="@+id/action_addFragment_to_listFrangment"
            app:destination="@id/listFrangment" />
    </fragment>
    <fragment
        android:id="@+id/listFrangment"
        android:name="com.example.testclbs.listFrangment"
        android:label="frangment_list"
        tools:layout="@layout/frangment_list" >
        <action
            android:id="@+id/action_listFrangment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_listFrangment_to_updateFragment"
            app:destination="@id/updateFragment" />
    </fragment>
    <fragment
        android:id="@+id/updateFragment"
        android:name="com.example.testclbs.updateFragment"
        android:label="fragment_update"
        tools:layout="@layout/fragment_update" >
        <action
            android:id="@+id/action_updateFragment_to_listFrangment"
            app:destination="@id/listFrangment" />
    </fragment>
</navigation>